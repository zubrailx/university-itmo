<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">

    <navigation-rule>
        <from-view-id>/view/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goMain</from-outcome>
            <to-view-id>/view/main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/view/main.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goIndex</from-outcome>
            <to-view-id>/view/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>