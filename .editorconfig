root = true

[*]
# unix style
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{c,cpp,h,hpp,py,js,css,html}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
# Tab indentation (no size specified)
[Makefile]
indent_style = tab
